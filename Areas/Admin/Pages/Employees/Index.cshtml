@page
@model HorseService.Areas.Admin.Pages.Brands.IndexModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Employees"] 
                           <a asp-page="Add" class="btn btn-primary">@sharedResource["Add"]  @sharedResource["Employee"]  </a>
                        </h2>
                    </div>
                    <div class="card-body">




                        @(Html.DevExtreme().DataGrid<HorseService.Models.Employee>()
                        .ID("gridContainer")
                        .DataSource(ds => ds.Mvc()
                        .Controller("Employees")
                        .LoadAction("Get")
                        .Key("EmployeeId")
                        )
                        .Columns(columns => {
                              columns.AddFor(m => m.Image)
            .Width(100)
            .AllowFiltering(false)
            .AllowSorting(false)
            .CellTemplate(@<text>
                <div>
                    <img width="50" height="50" src="/Images/Employee/<%- value %>" alt=""/>
                </div>
            </text>).Caption(sharedResource["Picture"]);

                        columns.AddFor(m => m.FullName).Caption(sharedResource["Full Name"]);

                        columns.AddFor(m => m.Description).Caption(sharedResource["Description"]);

                        columns.AddFor(m => m.IsActive).Caption(sharedResource["IsActive"]);


                             columns.Add().Caption(sharedResource["Actions"]).Width(450).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-success btn-sm"  href="/Admin/Employees/Edit?id=<%- data.EmployeeId %>"> @sharedResource["Edit"]  </a>
                                <a class="btn btn-primary btn-sm"  href="/Admin/Employees/Details?id=<%- data.EmployeeId %>"> @sharedResource["Details"]  </a>
                                 <a class="btn btn-danger btn-sm" href="/Admin/Employees/Delete?id=<%- data.EmployeeId %>">  @sharedResource["Delete"] </a>
                                  <a class="btn btn-primary btn-sm" href="/Admin/Employees/Appointment?id=<%- data.EmployeeId %>"> @sharedResource["Appointments"] </a>
                                  <a class="btn btn-warning btn-sm" href="/Admin/Videos/Index?id=<%- data.EmployeeId %>"> @sharedResource["Video"] </a>
                               <a class="btn btn-primary btn-sm" href="/Admin/OffDay/Add?id=<%- data.EmployeeId %>"> @sharedResource["OffDay"] </a>

                            </div>
                            </text>);

                        })
                          .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                        .HeaderFilter(headerFilter => headerFilter.Visible(true)).ShowColumnLines(true)
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .AllowColumnReordering(true)
                        .ShowRowLines(true)
                        .ShowBorders(true)
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(240)
                        .Placeholder(sharedResource["SearchTxt"]))
                        .RemoteOperations(true)
                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        )

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>