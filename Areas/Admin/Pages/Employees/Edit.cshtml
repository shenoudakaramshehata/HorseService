@page
@model HorseService.Areas.Admin.Pages.Brands.EditModel
@{
}



<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Edit"]  @sharedResource["Employee"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">
                            @(Html.DevExtreme().Form<HorseService.Models.Employee>()
                                 .FormData(Model.employee)
        .Items(items =>
        {


        items.AddSimpleFor(m => m.EmployeeId).Visible(false);
        items.AddSimpleFor(m => m.FullName).IsRequired(true).Label(k => k.Text(sharedResource["Full Name"]));
        items.AddSimpleFor(m => m.IsActive).IsRequired(true).Label(k => k.Text(sharedResource["IsActive"]));
        items.AddSimpleFor(m => m.Description).IsRequired(true).Label(k => k.Text(sharedResource["Description"]))
                           .ColSpan(2)
                           .Editor(e => e
                               .TextArea()
                               .Height(90)
                           );

        items.AddSimpleFor(m=>m.Image).Label(k => k.Text(sharedResource["Picture"])).Template(@<text>
                        <div>
                    <img width="250" height="250" src="/Images/Employee/@Model.employee.Image" alt="Employee Picture"/>
                </div>
                            </text> );

            items.AddSimpleFor(m => m.Image).Label(k => k.Text(sharedResource["Change_Picture"])).Template(@<text>


                            @(Html.DevExtreme().FileUploader()
                                        .Name("Photo")
                                        .SelectButtonText(sharedResource["Change_Picture"])
                                        .LabelText("")
                                        .Accept("image/*")
                                        .UploadMode(FileUploadMode.UseForm)
                                          .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                         .Height(70)
                                                        )
                            </text> );
            items.AddButton()
                        .ColSpan(3)
                        .ButtonOptions(b => b.Text(sharedResource["Save"])
                        .Type(ButtonType.Success)
                        .UseSubmitBehavior(true)).CssClass("invers");
        })
)
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
