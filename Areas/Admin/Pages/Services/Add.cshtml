@page
@model HorseService.Areas.Admin.Pages.Services.AddModel
@{
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Add"]  @sharedResource["Service"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">

                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">
                            @(Html.DevExtreme().Form<HorseService.Models.Service>()
.Items(items =>
{


items.AddSimpleFor(m => m.Title).IsRequired(true).Label(k => k.Text(sharedResource["Title"]));




        items.AddSimpleFor(m => m.Cost).Label(k => k.Text(sharedResource["Cost"])).ValidationRules(a=>a.AddRange().Min(0));




            items.AddButton()
                                    .ColSpan(3)
                                    .HorizontalAlignment(HorizontalAlignment.Right)
                                    .ButtonOptions(b => b.Text(sharedResource["Save"])
                                    .Type(ButtonType.Success)
                                    .UseSubmitBehavior(true)).CssClass("invers");
})
)
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
