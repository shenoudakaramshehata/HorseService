@page
@model HorseService.Areas.Admin.Pages.Services.IndexModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Services"]
                            <a asp-page="Add" class="btn btn-primary">@sharedResource["Add"]  @sharedResource["Service"]  </a>
                        </h2>
                    </div>
                    <div class="card-body">




                        @(Html.DevExtreme().DataGrid<HorseService.Models.Service>()
                        .ID("gridContainer")
                        .DataSource(ds => ds.Mvc()
                        .Controller("Services")
                        .LoadAction("Get")
                        .Key("ServiceId")
                        )
                        .Columns(columns => {

                        columns.AddFor(m => m.Title).Caption(sharedResource["Title"]);

                        columns.AddFor(m => m.Cost).Caption(sharedResource["Cost"]);



                             columns.Add().Caption(sharedResource["Actions"]).Width(450).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-success btn-sm"  href="/Admin/Services/Edit?id=<%- data.ServiceId %>"> @sharedResource["Edit"]  </a>
                                <a class="btn btn-primary btn-sm"  href="/Admin/Services/Details?id=<%- data.ServiceId %>"> @sharedResource["Details"]  </a>
                                 <a class="btn btn-danger btn-sm" href="/Admin/Services/Delete?id=<%- data.ServiceId %>">  @sharedResource["Delete"] </a>
                    

                            </div>
                            </text>);

                        })
                          .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                        .HeaderFilter(headerFilter => headerFilter.Visible(true)).ShowColumnLines(true)
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .AllowColumnReordering(true)
                        .ShowRowLines(true)
                        .ShowBorders(true)
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(240)
                        .Placeholder(sharedResource["SearchTxt"]))
                        .RemoteOperations(true)
                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        )

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>