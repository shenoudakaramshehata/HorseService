@page
@model HorseService.Areas.Admin.Pages.Videos.AddModel
@{
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Add"]  @sharedResource["Video"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <br />
                        <form id="form" method="post" enctype="multipart/form-data">

                            @(Html.DevExtreme().Form<HorseService.Models.Video>()




.Items(items => {



items.AddSimpleFor(e => e.EmployeeId)

        .Editor(e => e
            .Lookup()
             .DataSource(ds => ds.WebApi().Controller("Videos").LoadAction("EmployeesLookup").Key("Value"))
      .DisplayExpr("Text")
        .ValueExpr("Value")
        .Placeholder(sharedResource["Select"])
             .ShowClearButton(true)
                                                    .ClearButtonText(sharedResource["Clear"])
                                                    .CancelButtonText(sharedResource["Cancel"])
                                                    .SearchPlaceholder(sharedResource["searching"])

             ).Label(k => k.Text(sharedResource["Employee"])).Name("item").IsRequired(true);


items.AddSimpleFor(m => m.Caption).IsRequired(true).Label(k => k.Text(sharedResource["Caption"]));

items.AddSimple().IsRequired(true).Label(k => k.Text(sharedResource["Video"])).Template(@<text>
                            @(Html.DevExtreme().FileUploader()
                                        .Name("file")
                                        .SelectButtonText(sharedResource["Select_Video"])
                                        .LabelText("")
                                        .Accept("video/*")
                                        .UploadMode(FileUploadMode.UseForm)
                                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        .Height(70)
                               )

                            </text> ).IsRequired(true);
    items.AddButton()
  .ColSpan(3)
  .HorizontalAlignment(HorizontalAlignment.Right)
  .ButtonOptions(b => b.Text(sharedResource["Save"])
  .Type(ButtonType.Success)
  .UseSubmitBehavior(true)).CssClass("invers");



})
                            )

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
  
</script>