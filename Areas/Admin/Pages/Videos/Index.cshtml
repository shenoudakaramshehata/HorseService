@page
@model HorseService.Areas.Admin.Pages.Videos.IndexModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Video"]
                            <a asp-page="Add" class="btn btn-primary">@sharedResource["Add"]  @sharedResource["Video"]  </a>
                        </h2>
                    </div>
                    <div class="card-body">




                        @(Html.DevExtreme().DataGrid<HorseService.Models.Video>()
                        .ID("gridContainer")

                         .DataSource(Model.employeeVideos )

                        .Columns(columns => {
         columns.AddFor(m => m.VideoUrl)


            .AllowFiltering(false)
            .Width(400)
            .AllowSorting(false)
            .CellTemplate(@<text>
                <div>
                    <video height="200" controls src="/<%- value %>" alt="image"/>
                </div>
            </text>).Caption(sharedResource["Video"]);

                        columns.AddFor(m => m.EmployeeId).Lookup(lookup => lookup
  .DataSource(ds => ds.WebApi().Controller("Videos").LoadAction("EmployeesLookup").Key("Value"))
                .ValueExpr("Value")
                .DisplayExpr("Text")
).Caption(sharedResource["Employee"]);

                        columns.AddFor(m => m.Caption).Caption(sharedResource["Caption"]);


                        columns.Add().Caption(sharedResource["Actions"]).Width(200).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                        <a class="btn btn-primary btn-sm"  href="/Admin/Videos/Details?id=<%- data.VideoId %>"> <i class="fas fa-eye"></i> </a>
                                <a class="btn btn-success btn-sm"  href="/Admin/Videos/Edit?id=<%- data.VideoId %>">  <i class="fas fa-edit"></i> </a>

                                 <a class="btn btn-danger btn-sm" href="/Admin/Videos/Delete?id=<%- data.VideoId %>">  <i class="fas fa-trash"></i> </a>
                            </div>
                            </text>);
                        })
                          .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                        .HeaderFilter(headerFilter => headerFilter.Visible(true)).ShowColumnLines(true)
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .AllowColumnReordering(true)
                        .ShowRowLines(true)
                        .ShowBorders(true)
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(240)
                        .Placeholder(sharedResource["SearchTxt"]))
                        .RemoteOperations(true)
                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        )

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
