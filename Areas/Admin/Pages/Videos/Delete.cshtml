@page
@model HorseService.Areas.Admin.Pages.Videos.DeleteModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["Delete"]  @sharedResource["Video"]
                            <a asp-page="Index" class="btn btn-primary"> @sharedResource["Back"]</a>
                        </h2>
                    </div>
                    <div class="card-body">


                        <div style="padding-top:20px;padding-left:20px;padding-right:20px">
                            <div class="row">

                                <h4>@sharedResource["Informations"] </h4>
                                <hr />
                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Employee"]  </dt>
                                        <dd class="col-sm-10"> @Model.video.Employee.FullName </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Caption"]  </dt>
                                        <dd class="col-sm-10"> @Model.video.Caption </dd>
                                    </dl>
                                </div>

                                <div class="col-md-12 col-lg-12 mt-4">
                                    <dl class="row">
                                        <dt class="col-sm-2">@sharedResource["Video"]  </dt>
                                        <dd class="col-sm-10  Details_img">
                                            <video width="400" height="400" controls src="~/@Model.video.VideoUrl" />
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form method="post">
                        <div class="invers">
                            @(Html.DevExtreme().Button()
                    .ID("button")
                    .Text(sharedResource["Delete"])
                    .Type(ButtonType.Danger)
                    .UseSubmitBehavior(true)

                    )
                        </div>

                    </form>
                    <br />
                </div>
            </div>
        </div>
    </div>
</div>