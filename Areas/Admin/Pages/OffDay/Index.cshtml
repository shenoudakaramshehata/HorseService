@page
@model HorseService.Areas.Admin.Pages.OffDay.IndexModel
@{
}
<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h2 class="card-header d-flex justify-content-between align-items-center">
                            @sharedResource["OffDays"]
                            @*<a asp-page="Add" class="btn btn-primary">@sharedResource["Add"]  @sharedResource["OffDay"]  </a>*@
                        </h2>
                    </div>
                    <div class="card-body">
                        @(Html.DevExtreme().DataGrid<HorseService.Models.OffDays>()
                        .ID("gridContainer")
                        .DataSource(ds => ds.Mvc()
                        .Controller("OffDays")
                        .LoadAction("Get")
                        .Key("OffDaysId")
                        )
                        .Columns(columns => {

                        columns.AddFor(m => m.EmployeeId).Lookup(lookup => lookup
                        .DataSource(ds => ds.WebApi().
                        Controller("Lookups").LoadAction("EmployeesLookup").Key("Value"))
                         .ValueExpr("Value")
                         .DisplayExpr("Text")
                          ).Caption(sharedResource["Employee"]);

                        columns.AddFor(m => m.breaktypesId).Lookup(lookup => lookup
                        
                   .DataSource(ds => ds.WebApi().Controller("Lookups").LoadAction("BreakTypesLookup").Key("Value"))
                    .ValueExpr("Value")
                    
                    .DisplayExpr("Text")
                    
                     ).Caption(sharedResource["Break Type"]);
                       
                            columns.AddFor(m => m.From).Caption(sharedResource["From"]).DataType(GridColumnDataType.DateTime).Format("dd/MM/yyyy HH:mm:ss");

                            columns.AddFor(m => m.To).Caption(sharedResource["To"]).DataType(GridColumnDataType.DateTime).Format("dd/MM/yyyy HH:mm:ss");
                            columns.AddFor(m => m.Onday).Caption(sharedResource["OnDay"]).DataType(GridColumnDataType.Date).Format("dd/MM/yyyy");
                       
                        columns.Add().Caption(sharedResource["Actions"]).Width(300).Alignment(HorizontalAlignment.Center).CellTemplate(@<text>

                        <div class="btn-group" role="group" aria-label="Basic example">
                                <a class="btn btn-success btn-sm"  href="/Admin/OffDay/Edit?id=<%- data.OffDaysId %>"> @sharedResource["Edit"]  </a>
                                <a class="btn btn-primary btn-sm"  href="/Admin/OffDay/Details?id=<%- data.OffDaysId %>"> @sharedResource["Details"]  </a>
                                 <a class="btn btn-danger btn-sm" href="/Admin/OffDay/Delete?id=<%- data.OffDaysId %>">  @sharedResource["Delete"] </a>
                            </div>
                            </text>);

                        })
                          .Paging(paging => paging.PageSize(10))
                        .Pager(pager =>
                        {
                            pager.Visible(true);
                            pager.DisplayMode(GridPagerDisplayMode.Full);
                            pager.ShowPageSizeSelector(true);
                            pager.AllowedPageSizes(new JS("[5, 10, 'all']"));
                            pager.ShowInfo(true);
                            pager.ShowNavigationButtons(true);

                        })
                        .HeaderFilter(headerFilter => headerFilter.Visible(true)).ShowColumnLines(true)
                        .ShowRowLines(true)
                        .RowAlternationEnabled(true)
                        .AllowColumnReordering(true)
                        .ShowRowLines(true)
                        .ShowBorders(true)
                        .SearchPanel(searchPanel => searchPanel
                        .Visible(true)
                        .Width(240)
                        .Placeholder(sharedResource["SearchTxt"]))
                        .RemoteOperations(true)
                        .RtlEnabled(bool.Parse(sharedResource["ArLang"]))
                                        )

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>